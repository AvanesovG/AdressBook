<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cl_list_contact_item"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rv_img_list_contact"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/not_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/rv_tv_name_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        android:text="ttttttttttttttttt"
        app:layout_constraintLeft_toRightOf="@id/rv_img_list_contact"
        app:layout_constraintRight_toLeftOf="@id/rv_img_bt_edit"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/rv_tv_number_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="22222222222"
        app:layout_constraintLeft_toRightOf="@id/rv_img_list_contact"
        app:layout_constraintRight_toLeftOf="@id/rv_img_bt_edit"
        app:layout_constraintTop_toBottomOf="@id/rv_tv_name_contact">

    </TextView>

    <ImageView
        android:visibility="gone"
        android:id="@+id/rv_img_bt_edit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/edit"
        app:layout_constraintRight_toLeftOf="@id/rv_img_bt_delete"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageView
        android:visibility="gone"
        android:id="@+id/rv_img_bt_delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/delete"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent"></ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>